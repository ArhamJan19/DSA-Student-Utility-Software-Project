<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="700" maxWidth="600" minHeight="700" minWidth="600" prefHeight="700.0" prefWidth="600.0" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.studentutilitysoftware.DecompresFeature.FileDecompressionUI">

    <!-- Drag and Drop Zone for Compressed File -->
    <Label fx:id="compressedFileDropZone" layoutX="44.0" layoutY="57.0" prefHeight="100.0" prefWidth="514.0" style="-fx-border-color: black; -fx-border-width: 2; -fx-background-color: lightgray; -fx-font-size: 14px; -fx-alignment: center;" text="Drag and Drop Compressed File Here" />

    <!-- Drag and Drop Zone for Encoded String -->
    <Label fx:id="encodedStringDropZone" layoutX="44.0" layoutY="194.0" prefHeight="100.0" prefWidth="514.0" style="-fx-border-color: black; -fx-border-width: 2; -fx-background-color: lightgray; -fx-font-size: 14px; -fx-alignment: center;" text="Drag and Drop Encoded String File Here" />

    <!-- Drag and Drop Zone for Huffman Codes -->
    <Label fx:id="huffmanCodesDropZone" layoutX="44.0" layoutY="322.0" prefHeight="100.0" prefWidth="514.0" style="-fx-border-color: black; -fx-border-width: 2; -fx-background-color: lightgray; -fx-font-size: 14px; -fx-alignment: center;" text="Drag and Drop Huffman Codes File Here" />

    <!-- Status Label -->
    <Label fx:id="statusLabel" layoutX="28.0" layoutY="460.0" prefWidth="400.0" style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Status: Waiting for files..." />

    <!-- Progress Bar -->
    <ProgressBar fx:id="progressBar" layoutX="28.0" layoutY="509.0" prefHeight="18.0" prefWidth="530.0" progress="0.0" />

    <!-- Decompress Button -->
    <Button fx:id="DecompressButton" layoutX="210.0" layoutY="577.0" prefHeight="45.0" prefWidth="178.0" style="-fx-background-color: #011a11;" text="DECOMPRESS FILE" textFill="WHITE">
        <font>
            <Font name="Dubai Medium" size="18.0" />
        </font>
    </Button>
</AnchorPane>
