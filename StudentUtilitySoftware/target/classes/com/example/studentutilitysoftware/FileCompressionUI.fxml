<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane minHeight="700" minWidth="600" prefHeight="700.0" prefWidth="600.0" maxWidth="600" maxHeight="700" style="-fx-padding: 20;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.studentutilitysoftware.CompressFeature.FileDragDropController">

    <!-- Drag and Drop Zone -->
    <Label fx:id="dropZone" layoutX="44.0" layoutY="12.0" prefHeight="458.0" prefWidth="514.0" style="-fx-border-color: black; -fx-border-width: 2; -fx-background-color: lightgray; -fx-font-size: 16px; -fx-alignment: center;" text="Drag and Drop Files Here" />

    <!-- Status Label -->
    <Label fx:id="statusLabel" layoutX="28.0" layoutY="490.0" prefWidth="400.0" style="-fx-font-size: 14px; -fx-text-fill: gray;" text="Status: Waiting for a file..." />

    <!-- Progress Bar -->
    <ProgressBar fx:id="progressBar" layoutX="28.0" layoutY="551.0" prefHeight="18.0" prefWidth="530.0" progress="0.0" />

    <!-- Compress Button -->
    <Button fx:id="compressButton" layoutX="208.0" layoutY="638.0" onAction="#compressFile" prefWidth="170.0" style="-fx-background-color: #011a11;" text="COMPRESS FILE" textFill="WHITE">
      <font>
         <Font name="Dubai Medium" size="18.0" />
      </font></Button>
</AnchorPane>
